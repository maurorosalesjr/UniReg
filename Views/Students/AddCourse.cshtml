@{
  Layout = "_Layout";
}

@model UniReg.Models.Student

<h1>Add a course</h1>

<h4>Add a course to this task: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" class="button-53" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>