@{
  Layout = "_Layout";
}

@using UniReg.Models;
@model List<UniReg.Models.Student>;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Description}", "Details", new { id = student.StudentId })</li>
}

<p>@Html.ActionLink("Add new student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>